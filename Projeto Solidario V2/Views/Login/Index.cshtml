
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/MenuPrincipal.css" />


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ajuda Digital</title>




</head>
<body>

    <link rel="stylesheet" href="~/Content/Tabela.css" />
    <div class="container body-content">
        <div class="container">
            <div class="tudo">
                <form action="/Login/ValidaLogin" method="post" name="Login_Form" class="formPontilhado">
                    <h3 class="formAcesso">Bem vindo ao Ajuda Digital</h3>
                    <hr class="linha"><br>

                    <div>
                        <input type="text" class="formDados" name="login.Email" placeholder="E-mail" /><br>
                        <input type="password" class="formDados" name="login.Senha" placeholder="Senha" />
                    </div>

                    <div>
                        <a class="relembrarSenha" href="#"> Esqueci Minha Senha</a>
                    </div>
                    <br>
                    <div>
                        <input type="submit" class="btn btn-success" value="Login">
                        <a class="btn btn-success" href="/Login/VerificaUsuario">Cadastrar</a>


                    </div>
                </form>
            </div>
        </div>
        <hr />
        <footer class="fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Ajuda Digital V2</p>
        </footer>
    </div>
</body>
</html>