
@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="~/Content/Tabela.css" />


<h2>Criar</h2>



    <div class="form-horizontal">
        <h4>Campanha</h4>
        <hr />
        <form action="/LancarCampanha/Salvar" method="post">
            <div class="form-group">
                <label class="control-label col-md-2"> Nome da Campanha</label>
                <div class="col-md-10">
                    <input name="campanha.Nome" id="campanha.Nome" class="form-control" value="" />
                </div>

                <label class="control-label col-md-2"> Data de Inicio</label>
                <div class="col-md-10">
                    <input name="campanha.DataInicial" id="campanha.DataInicial" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                </div>

                <label class="control-label col-md-2"> Data de Encerramento</label>
                <div class="col-md-10">
                    <input name="campanha.DataFinal" id="campanha.DataFinal" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                </div>

                <label class="control-label col-md-2"> Texto do Email</label>
                <div class="col-md-10">
                    <textarea name="campanha.Descricao" class="form-control" type="text" placeholder="Insira aqui dados da campanha como: Local, Endereço, Data e horário para quem quiser ajudar mas não doar"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Criar" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>


<div>
    @Html.ActionLink("Voltar", "Index")
</div>

